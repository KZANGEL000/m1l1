import discord
from discord.ext import commands

bot = commands.Bot(command_prefix='!')

@bot.event
async def on_ready():
    print(f'Logged in as {bot.user}')

@bot.command()
async def эко(ctx):
    await ctx.send('Привет! Хочешь узнать, как помочь экологии? Вот несколько простых способов: сортировать мусор, экономить воду, использовать энергосберегающие лампочки и уменьшать использование пластика.')

bot.run('')
